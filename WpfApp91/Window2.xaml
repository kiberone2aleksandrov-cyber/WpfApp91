        xmlns:local="clr-namespace:WpfApp91"
        mc:Ignorable="d"
        Title="Window2" Height="1080" Width="1920">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF6F6F6F" Offset="0.348"/>
                <GradientStop Color="#FF2B2B2B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>


        <Label x:Name ="label1" Content="Настройки" FontWeight="Bold" FontSize="70" Foreground="White" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top"/>

        <Slider HorizontalAlignment="Left" Margin="1179,278,0,0" VerticalAlignment="Top" Width="731" Height="30"/>

        <Label Content="Чувствительность мыши:" FontWeight="Bold" FontSize="50" Foreground="LightGray" HorizontalAlignment="Left" Margin="10,240,0,0" VerticalAlignment="Top"/>

        <Label Content="Громокость музыки:" FontWeight="Bold" FontSize="50" Foreground="LightGray" HorizontalAlignment="Left" Margin="10,350,0,0" VerticalAlignment="Top"/>

        <Slider HorizontalAlignment="Left" Margin="1179,388,0,0" VerticalAlignment="Top" Width="731" Height="30"/>
        <Button Content="Выход" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold" Margin="1617,908,0,0" VerticalAlignment="Top" Height="146" Width="293" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1">
            <Button.Resources>
                <Style TargetType ="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
            

        </Button>
    </Grid>
</Window>
