<Window x:Class="WpfApp91.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp91"
        mc:Ignorable="d"
        Width="1903"  
        Height="1085"
        Title="Window1">
    <Grid Width="1920" Height="1080">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1920"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF6F6F6F" Offset="0.348"/>
                <GradientStop Color="#FF2B2B2B" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="KAMEN" Content="" HorizontalAlignment="Left" Margin="187,379,0,0" VerticalAlignment="Top" Height="308" Width="360" Click="Button_Click_2" BorderThickness="0,0,0,0" ClipToBounds="True" RenderTransformOrigin="0.5,0.5">
            <Button.Background>
                <ImageBrush ImageSource="/i.png" Stretch="Uniform"/>
            </Button.Background>
            
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="50">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            
        </Button>

        <Button x:Name="NOJNICI" Content="" HorizontalAlignment="Left" Margin="703,0,0,0" VerticalAlignment="Center" Height="308" Width="438" RenderTransformOrigin="0.5,0.5" Click="Button_Click" Grid.ColumnSpan="1" Padding="1,1,1,5" BorderThickness="0,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/i (1).png" Stretch="Fill"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="50">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Label Content="ВЫБЕРИТЕ ПРЕДМЕТ" FontWeight="Bold" Foreground="White" FontSize="50" HorizontalAlignment="Center" Margin="0,71,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.393,0.498"/>
        <Button Content="" HorizontalAlignment="Left" FontSize="30" FontWeight="Bold" Margin="10,10,0,0" VerticalAlignment="Top" Height="135" Width="133" RenderTransformOrigin="0.5,0.5" Click="Button_Click_1">
            <Button.Resources>
                <Style TargetType ="Border">
                    <Setter Property="CornerRadius" Value="15">
                    </Setter>
                </Style>
            </Button.Resources>
            <Button.Background>
                <ImageBrush ImageSource="/a09adb8722a63ec83e233132ed3e5eaf-no-bg-preview (carve.photos).png" Stretch="UniformToFill"/>
            </Button.Background>


        </Button>

        <Label Content="Результат:" FontSize="40" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top"/>

        <Button Content="" HorizontalAlignment="Left" Margin="1314,0,0,0" VerticalAlignment="Center" Height="308" Width="360" RenderTransformOrigin="0.5,0.5" Click="Button_Click3" BorderThickness="0,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/i (2).png"/>
            </Button.Background>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="50">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label x:Name="labelResult" Content=" " Foreground="LightGray" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="836,262,0,0" VerticalAlignment="Top"/>
        <TextBox  HorizontalAlignment="Left" Margin="31,979,0,0" FontSize="25" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="248" Height="52"  BorderBrush="#FFAFAFAF" SelectionBrush="White" SelectionTextBrush="White" Foreground="DarkGray" x:Name="textbox1" TextChanged="TextBox_TextChanged">
            <TextBox.Style>
                <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                    <Style.Resources>
                        <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <Label Content="Введите⠀ник⠀" Foreground="LightGray"  />
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="Background" Value="White" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

    </Grid>
</Window>
